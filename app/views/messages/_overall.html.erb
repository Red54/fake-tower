<h3 class="lead">Messages</h3>
<div ng-app="Message">
	<div ng-controller="MessageCtrl">

		<table class="table table-striped">

			<thead>
				<tr>
					<th>Index</th>
					<th>Title</th>
					<th>Content</th>
				</tr>
			</thead>

			<tbody>
				<tr ng-repeat="message in messages">
					<td>{{ $index + 1 }}</td>
					<td><a ng-href="/projects/<%= @project._id %>/messages/{{ message._id }}" >{{ message.title }}</a></td>
					<td>{{ message.content }}</td>
				</tr>
			</tbody>
		</table>

		<form ng-submit="addMessage()" class="form">
			<input type="text" ng-model="newMessage.title" placeholder="Title" /><br />
			<textarea ng-model="newMessage.content" placeholder="Content" ></textarea><br />
			<input type="submit" class="btn btn-primary" value="Create new message" />
		</form>
	</div>
</div>


<hr />
